<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:onClick="calculate"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/editText"
        android:layout_width="220dp"
        android:layout_height="63dp"
        android:ems="10"
        android:inputType="numberDecimal"
        android:shadowColor="#6200EE"
        android:textColorHighlight="#6200EE"
        android:textColorHint="#6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.356"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.246" />

    <Button
        android:id="@+id/button"
        android:layout_width="130dp"
        android:layout_height="60dp"
        android:layout_marginTop="312dp"
        android:onClick="calculate"
        android:shadowColor="#6200EE"
        android:text="Submit"
        android:textColor="#6200EE"
        android:textColorHighlight="#6200EE"
        android:textColorHint="#6200EE"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.423"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText"
        app:layout_constraintVertical_bias="0.0"
        app:rippleColor="#6200EE"
        app:strokeColor="#6200EE"
        app:toggleCheckedStateOnClick="true" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="164dp"
        android:layout_height="43dp"
        android:layout_marginTop="84dp"
        android:shadowColor="#E91E63"
        android:textColor="#E91E63"
        android:textColorHighlight="#E91E63"
        android:textColorHint="#E91E63"
        android:textColorLink="#E91E63"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.344"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="356dp"
        android:layout_height="95dp"
        android:shadowColor="#6200EE"
        android:text="Enter Weight in Kg"
        android:textColor="#6200EE"
        android:textColorHighlight="#6200EE"
        android:textColorHint="#6200EE"
        android:textColorLink="#6200EE"
        android:textSize="34sp"
        app:layout_constraintBottom_toTopOf="@+id/editText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.387" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="120dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/kg"
        tools:layout_editor_absoluteY="695dp" />

</androidx.constraintlayout.widget.ConstraintLayout>